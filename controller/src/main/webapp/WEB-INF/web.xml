<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
		  http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         version="2.5">
    <servlet>
        <servlet-name>getPersonsController</servlet-name>
        <servlet-class>controller.PersonsListController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>getPersonsController</servlet-name>
        <url-pattern>/getPersons.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>removePersonController</servlet-name>
        <servlet-class>controller.RemovePersonController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>removePersonController</servlet-name>
        <url-pattern>/removePerson.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>registerPersonController</servlet-name>
        <servlet-class>controller.RegisterPersonController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>registerPersonController</servlet-name>
        <url-pattern>/registerPerson.do</url-pattern>
    </servlet-mapping>
</web-app>
